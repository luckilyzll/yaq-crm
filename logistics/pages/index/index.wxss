/**index.wxss**/
page{
  background: #f5f7fb;
}
.hengxian{
  margin-bottom: 10rpx;
}
.big{
  width: 94%;
  height: 100%;
  margin-left: 3%;
  margin-right: 3%;
}
.bk{
  width: 100%;
  padding-left: 3%;
  padding-right: 3%;
  box-sizing: border-box;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 2rpx 9rpx 0rpx rgba(7,80,31,0.06);
  border-radius:10rpx;
  margin-top: 25rpx;
}

.name{
  width: 100%;
  height: 72rpx;
  border-bottom: 1rpx solid rgba(239,239,239,1);
  padding-top: 15rpx;
  padding-bottom: 11rpx;
  box-sizing: border-box;
  margin-bottom: 14rpx;
}
.name_im{
  width: 15%;
  text-align: left;
  margin-top: 6rpx;
}
.dian{
  width: 81rpx;
  height: 40rpx;
  line-height: 40rpx;
  background:rgba(19,191,108,1);
  border-radius:5rpx;
  text-align: center;
  font-size:24rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.name_text{
  width: 85%;
  font-size:36rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  padding-right: 5%;
  box-sizing: border-box;
}
.sj{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
.sj_img{
  width: 10%;
  text-align: left;
}
.sj_img image{
  width: 45rpx;
  height: 47rpx;
  margin-top: 6rpx;
}
.sj_text{
  width: 90%;
  font-size:32rpx;
  font-weight:500;
  color:rgba(72,72,72,1);
}
.sl{
  width: 100%;
  height: 44rpx;
  text-align: right;
  border-bottom: 1rpx solid rgba(239,239,239,1);
}
.sl view{
  font-size:26rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.sl_cs{
  color: #DF2323;
}
.rw{
  width: 100%;
  height: 85rpx;
  line-height: 85rpx;
}
.rw_time{
  width: 70%;
  font-size:28rpx;
  font-weight:500;
  color:rgba(72,72,72,1);
}
.rw_img{
  width: 30%;
  text-align: right;
}
.rw_img image{
  width: 156rpx;
  height: 52rpx;
  margin-top: 15rpx;
}
